<section class="cart py-16">
    <% if(session.cart){%>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <% for(let pizza of Object.values(session.cart.items)){%>
        <div class="pizza-list">
            <div class="flex items-center my-8">
                <img src="/img/<%=pizza.item.image%>" class="w-24" alt="">
                <div class="flex-1 ml-4">
                    <h1><%=pizza.item.name%></h1>
                    <span><%=pizza.item.size%></span>
                </div>
                <span class="flex-1"><%=pizza.qty%>PCs</span>
                <span class="font-bold text-lg">â‚¹ <%=pizza.qty*pizza.item.price%></span>
            </div>
            <%}%>
        </div>
        <hr>

        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amout:</span>
                <span class="amount text-2xl font-bold ml-2">
                    â‚¹<%=session.cart.totalPrice%></span>
            </div>
            <% if(user) { %>
            <div>
                <% if(messages.error){ %>
                    <span class="text-red-500 á¹­ext-sm font-bold"><%= messages.error %></span>
                    <% } %>
                <form action="/orders" method="POST" class="mt-12">
                    <input type="text" name="phone" id="" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone No.">
                    <input type="text" name="address" id="" class="border border-gray-400 p-2 w-1/2" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <% } else{ %> 
            <a href="/login" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to Continue</a>
            <%}%>
        </div>
    </div>

    <% } else { %>
        <div class="empty-cart py-16">
            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
                <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet. <br>
                    To order a pizza, go to the main page.</p>
                <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
                <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
            </div>
        </div>
        <% } %>
</section>